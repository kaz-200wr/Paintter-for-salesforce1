<apex:page contentType="text/css" standardStylesheets="false">
    *{
        margin:0px; padding:0px;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        -webkit-touch-callout: none;
        -webkit-user-select: none;
    }

    body {
        width:1014px;
    } <!-- height:768px;} -->

    .pageWrapper{
        height:100%;
    }

    .main {
        padding-left:10px;
        margin:auto;
        width:1014px;
    }<!-- height:768px; } -->
    
    .toolbar{
        height: 54px;
        margin-top: 6px;
    }

    .toolbar #toolbarLeft{
        float: left;
        margin-left: 10px;
    }

    .toolbar #toolbarRight{
        float: right;
        margin-right: 20px;
    }

    .toolbar li {
        list-style-type: none;
        display:block;
        float:left;
    }
    .toolbar .tool{
        width:40px;
        height:40px;
        margin:auto;
        border:1px solid #ccc;
        border-radius:6px;
        margin:4px;
    }
    .toolbar .icon{
        height:40px;
        margin:auto;
        margin:4px;
    }
    .toolbar .styleSelecter{
        text-align:center; line-height:44px;
    }
    .toolbar #small{
        font-size:100%;
    }
    .toolbar #middle{
        font-size:200%;
    }
    .toolbar #large {
        font-size:400%;
    }
    
    .styleSelecter.active, .pen.active{
        border-bottom-width:5px !important;
        border-bottom-color:red !important;
        border-bottom-style:outset !important;
    }

    .toolbar .historyButton, #saveButton, #chatterButton{
        color: rgb(200, 200, 200);
    }
    .toolbar .historyButton.active, #saveButton.active, #chatterButton.active{
        color: rgb(0, 0, 0);
    }

    #memolySize{
        text-align: center;
        font-size: 110%;
        height: 54px
    }

    #memolySize div{
        margin-top:0;
        margin-bottom:0;
        position: relative;
    }
    #memolySize #metter{
        top: -40px;
        z-index: 1000;
    }
    #memolySize #size{
        z-index: 1001;
    }

    #memolyMeter{
        width: 280px;
    }

    #memoryValue.alert{
        background-color: red;
    }

    #message{
        color: red;
        font-size: 2rem;
        display:none;
    }

    /* お絵描きする部分のCSS */
    .canvas {
        width:1000px;
        height:636px;
        border:1px solid #ccc;
    }
    .canvas canvas {
        width:1000px;
        height:636px;
    }

    .sp-replacer{
        padding: 0;
        border: 0;
    }
    .sp-preview-inner{
        width:100%;
        height:100%;
        margin:auto;
    }
    .sp-preview{
        width: 40px;
        height: 40px;
        border: 0;
        margin: 0;
    }

    .sp-palette {
        max-width: 400px;
    }
    .sp-palette .sp-thumb-el {
        width: 40px;
        height: 40px;
    }

    .sp-picker-container {
        width: 400px;
    }
    .sp-container button {
        font-size:24px;
    }
    .sp-cancel {
        font-size: 24px;
    }
</apex:page>